      }
    ],
    "triage_criteria": {
      "immediate": [
        "Airway obstruction",
        "Tension pneumothorax",
        "Uncontrolled major hemorrhage",
        "Decreased level of consciousness",
        "Shock"
      ],
      "delayed": [
        "Open abdominal wounds without shock",
        "Open fractures",
        "Soft tissue injuries requiring surgery",
        "Eyes, ears and maxillofacial injuries"
      ],
      "minimal": [
        "Minor lacerations",
        "Closed fractures",
        "Strain/sprain injuries",
        "Minor burns"
      ],
      "expectant": [
        "Catastrophic brain injury",
        "Multiple major trauma with CPR > 15 min",
        "Burns > 85% BSA"
      ]
    }
  }
}